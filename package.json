{
  "name": "zhouhaifei-react-scripts",
  "homepage": "https://air-supply94.github.io/zhouhaifei-react-scripts/",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/air-supply94/zhouhaifei-react-scripts.git",
    "branch": "master",
    "platform": "github"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "commitizen": "^4.2.2",
    "conventional-changelog-cli": "^2.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "dumi": "^1.1.25",
    "eslint": "7.29.0",
    "gh-pages": "^3.2.3",
    "husky": "4.3.0",
    "lerna": "^4.0.0",
    "lint-staged": "10.5.2",
    "prettier": "2.2.1",
    "stylelint": "13.13.1",
    "typescript": "4.2.4",
    "validate-commit-msg": "^2.14.0",
    "zhouhaifei-code-style": "2.15.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run changelog && git add . && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS && validate-commit-msg"
    }
  },
  "lint-staged": {
    "**/*.less": [
      "npm run lint:style-less",
      "git add ."
    ],
    "**/*.scss": [
      "npm run lint:style-scss",
      "git add ."
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "npm run lint:js",
      "git add ."
    ],
    "**/*.{css,less,scss,md,html,json}": [
      "prettier --write",
      "git add ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "commit": "cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && npm run prettier && git add CHANGELOG.md",
    "bootstrap": "lerna bootstrap",
    "publish": "lerna publish",
    "lint-staged": "lint-staged --allow-empty",
    "lint:style-less": "stylelint --fix \"src/**/*.less\" --syntax less",
    "lint:style-scss": "stylelint --fix \"src/**/*.scss\" --syntax scss",
    "lint:js": "eslint --fix --quiet --ext .js,.jsx,.ts,.tsx .",
    "prettier": "prettier -c --write \"**/*.{css,less,scss,md,html,json}\"",
    "docs:start": "dumi dev",
    "docs:build": "dumi build",
    "deploy": "npm run docs:build && gh-pages -d dist"
  }
}
