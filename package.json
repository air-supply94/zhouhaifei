{
  "name": "zhouhaifei-engineering",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/air-supply94/zhouhaifei-engineering.git",
    "branch": "master",
    "platform": "github"
  },
  "scripts": {
    "build": "turbo build",
    "commit": "cz",
    "preinstall": "npx only-allow pnpm",
    "lint:js": "eslint --fix --cache --quiet --ext .js,.jsx,.ts,.tsx .",
    "prepare": "pnpx husky@9.0.11",
    "prettier": "prettier --cache --cache-strategy metadata -c --write \"**/*.{less,css,scss,sass,yaml,md,html,json}\"",
    "release": "esno scripts/release.ts",
    "test": "turbo test"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --cache --quiet --fix",
      "git add ."
    ],
    "**/*.{less,css,scss,sass,yaml,md,html,json}": [
      "prettier --cache --cache-strategy metadata -c --write",
      "git add ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "resolutions": {
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@types/node": "^16.18.61",
    "@zhouhaifei/code-style": "workspace:*",
    "esno": "4.0.0",
    "git-repo-info": "2.1.1",
    "turbo": "^1.10.16",
    "typescript": "4.2.4",
    "zx": "7.2.3"
  },
  "engines": {
    "node": "20.11.1",
    "pnpm": "9.1.0"
  }
}
