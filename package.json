{
  "name": "zhouhaifei-engineering",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/air-supply94/zhouhaifei-engineering.git",
    "branch": "master",
    "platform": "github"
  },
  "scripts": {
    "build": "turbo build",
    "commit": "cz",
    "preinstall": "npx only-allow pnpm",
    "lint:js": "eslint --fix --cache --quiet --ext .js,.jsx,.ts,.tsx .",
    "prepare": "husky",
    "prettier": "prettier --cache --cache-strategy metadata -c --write \"**/*.{yaml,md,html,json}\"",
    "release": "esno scripts/release.ts",
    "test": "turbo test"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npm run lint:js",
      "git add ."
    ],
    "**/*.{yaml,md,html,json}": [
      "prettier --write",
      "git add ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "resolutions": {
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@types/node": "^16.18.61",
    "@zhouhaifei/code-style": "workspace:*",
    "esno": "4.0.0",
    "git-repo-info": "2.1.1",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "turbo": "^1.10.16",
    "typescript": "4.2.4",
    "zx": "7.2.3"
  },
  "volta": {
    "node": "20.10.0",
    "pnpm": "8.9.2"
  }
}
