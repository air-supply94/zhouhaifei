{
  "name": "zhouhaifei-engineering",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/air-supply94/zhouhaifei-engineering.git",
    "branch": "master",
    "platform": "github"
  },
  "packageManager": "^pnpm@8.9.2",
  "engines": {
    "node": ">= 16.20",
    "pnpm": "^8.9.2"
  },
  "devDependencies": {
    "eslint": "7.29.0",
    "prettier": "2.2.1",
    "stylelint": "13.13.1",
    "@types/node": "^16.18.61",
    "@changesets/cli": "2.26.2",
    "@commitlint/cli": "11.0.0",
    "@zhouhaifei/code-style": "workspace:*",
    "commitizen": "4.2.2",
    "conventional-changelog-cli": "2.1.1",
    "cz-conventional-changelog": "3.3.0",
    "husky": "4.3.0",
    "lint-staged": "10.5.2",
    "turbo": "^1.10.16",
    "validate-commit-msg": "2.14.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run changelog && git add . && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS && validate-commit-msg"
    }
  },
  "resolutions": {
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npm run lint:js",
      "git add ."
    ],
    "**/*.{css,md,html,json}": [
      "prettier --write",
      "git add ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "commit": "cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && npm run prettier && git add CHANGELOG.md",
    "changeset": "changeset",
    "changeset-version": "changeset version",
    "changeset-publish": "changeset publish --registry=https://registry.npmjs.com/",
    "run-test": "turbo test",
    "run-build": "turbo build",
    "lint-staged": "lint-staged --allow-empty",
    "lint:js": "eslint --fix --cache --quiet --ext .js,.jsx,.ts,.tsx .",
    "prettier": "prettier --cache --cache-strategy metadata -c --write \"**/*.{css,md,html,json}\""
  }
}
