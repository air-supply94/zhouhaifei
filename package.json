{
  "name": "zhouhaifei-engineering",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/air-supply94/zhouhaifei-engineering.git",
    "branch": "master",
    "platform": "github"
  },
  "scripts": {
    "build": "turbo build",
    "commit": "cz",
    "husky-commitlint": "commitlint -e",
    "preinstall": "npx only-allow pnpm",
    "lint": "npm run prettier && npm run lint:js && npm run lint:style",
    "lint:js": "cross-env TIMING=1 eslint --fix --cache --quiet --ext .cjs,.mjs,.js,.jsx,.ts,.tsx .",
    "lint:style": "stylelint --cache --quiet --fix \"{**/*,*}.{less,css,scss,sass}\"",
    "prepare": "pnpx husky@9.0.11",
    "prettier": "prettier --cache --cache-strategy metadata -c --write \"{**/*,*}.{js,cjs,mjs,jsx,ts,tsx,less,css,scss,sass,yaml,md,html,json}\"",
    "release": "esno scripts/release.ts",
    "test": "turbo test"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "resolutions": {
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7"
  },
  "devDependencies": {
    "@types/node": "20.11.1",
    "@zhouhaifei/code-style": "workspace:*",
    "cross-env": "7.0.3",
    "esno": "4.0.0",
    "git-repo-info": "2.1.1",
    "turbo": "^1.10.16",
    "typescript": "5.4.5",
    "zx": "7.2.3"
  },
  "engines": {
    "node": "20.11.1"
  }
}
