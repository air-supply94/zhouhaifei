{
  "name": "zhouhaifei-react-scripts",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@ant-design/icons": "^4.2.2",
    "@ant-design/pro-layout": "6.5.14",
    "antd": "^4.8.2",
    "axios": "^0.21.0",
    "dayjs": "^1.9.6",
    "loadsh": "^0.0.4",
    "mobx": "5.15.7",
    "mobx-react": "6.3.1",
    "qs": "^6.9.4",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.2.0",
    "reflect-metadata": "^0.1.13",
    "zhouhaifei-utils": "2.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "11.1.1",
    "@testing-library/user-event": "12.2.0",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.165",
    "@types/mockjs": "^1.0.3",
    "@types/node": "^14.14.7",
    "@types/qs": "^6.9.5",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/react-router": "^5.1.8",
    "@types/react-router-dom": "^5.1.6",
    "eslint": "7.13.0",
    "husky": "4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "10.5.1",
    "mockjs": "^1.1.0",
    "prettier": "2.1.2",
    "react-test-renderer": "^17.0.1",
    "stylelint": "13.7.2",
    "typescript": "^4.0.5",
    "zhouhaifei-babel-config": "^2.2.0",
    "zhouhaifei-code-style": "2.2.3",
    "zhouhaifei-react-scripts": "^2.2.2",
    "zhouhaifei-test": "^2.2.0"
  },
  "browserslist": [
    "Chrome >= 54",
    "Firefox >= 47",
    "Edge >= 12",
    "Explorer >= 11",
    "Safari >= 10.1",
    "Opera >= 41"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.less": [
      "npm run lint:style-less",
      "git add ."
    ],
    "**/*.scss": [
      "npm run lint:style-scss",
      "git add ."
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "npm run lint:js",
      "git add ."
    ],
    "**/*.{css,less,scss,md,html,json}": [
      "prettier --write",
      "git add ."
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "publish": "lerna run build && lerna publish",
    "test-start": "node packages/zhouhaifei-react-scripts/scripts/start.js",
    "test-build": "node packages/zhouhaifei-react-scripts/scripts/build.js",
    "test-test": "node packages/zhouhaifei-test/scripts/react.js",
    "start": "zhouhaifei-react-scripts start",
    "build": "zhouhaifei-react-scripts build",
    "test": "zhouhaifei-test react",
    "lint-staged": "lint-staged --allow-empty",
    "lint:style-less": "stylelint --fix \"src/**/*.less\" --syntax less",
    "lint:style-scss": "stylelint --fix \"src/**/*.scss\" --syntax scss",
    "lint:js": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
    "prettier": "prettier -c --write \"**/*.{css,less,scss,md,html,json}\""
  }
}
