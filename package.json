{
  "name": "zhouhaifei-react-scripts",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@ant-design/icons": "^4.2.2",
    "@ant-design/pro-layout": "^6.4.14",
    "antd": "^4.6.2",
    "axios": "^0.20.0",
    "lerna": "^3.22.1",
    "loadsh": "^0.0.4",
    "mobx": "^5.15.6",
    "mobx-react": "^6.3.0",
    "moment": "^2.27.0",
    "qs": "^6.9.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.2.0",
    "reflect-metadata": "^0.1.13",
    "zhouhaifei-utils": "^1.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.2",
    "@testing-library/user-event": "^12.1.3",
    "@types/jest": "^26.0.13",
    "@types/lodash": "^4.14.161",
    "@types/mockjs": "^1.0.3",
    "@types/node": "^14.6.4",
    "@types/qs": "^6.9.4",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.0",
    "@types/react-router": "^5.1.8",
    "@types/react-router-dom": "^5.1.5",
    "eslint": "7.8.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "mockjs": "^1.1.0",
    "prettier": "^2.1.1",
    "react-test-renderer": "^16.13.1",
    "stylelint": "^13.7.0",
    "typescript": "^4.0.2",
    "zhouhaifei-babel-config": "^1.3.1",
    "zhouhaifei-code-style": "^1.3.3",
    "zhouhaifei-react-scripts": "^1.3.2",
    "zhouhaifei-test": "^1.3.2"
  },
  "browserslist": [
    "Chrome >= 54",
    "Firefox >= 47",
    "Edge >= 12",
    "Explorer >= 11",
    "Safari >= 10.1",
    "Opera >= 41"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.less": [
      "npm run lint:style-less",
      "git add ."
    ],
    "**/*.scss": [
      "npm run lint:style-scss",
      "git add ."
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "npm run lint:js",
      "git add ."
    ],
    "**/*.{css,less,scss,md,html,json}": [
      "prettier --write",
      "git add ."
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "publish": "lerna run publish",
    "test-start": "node packages/zhouhaifei-react-scripts/scripts/start.js",
    "test-build": "node packages/zhouhaifei-react-scripts/scripts/build.js",
    "test-test": "node packages/zhouhaifei-test/scripts/react.js",
    "start": "zhouhaifei-react-scripts start",
    "build": "zhouhaifei-react-scripts build",
    "test": "zhouhaifei-test react",
    "lint-staged": "lint-staged --allow-empty",
    "lint:style-less": "stylelint --fix \"src/**/*.less\" --syntax less",
    "lint:style-scss": "stylelint --fix \"src/**/*.scss\" --syntax scss",
    "lint:js": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
    "prettier": "prettier -c --write \"**/*.{css,less,scss,md,html,json}\""
  }
}
