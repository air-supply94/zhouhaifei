{
  "name": "zhouhaifei-react-scripts",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@ant-design/icons": "^4.2.1",
    "@ant-design/pro-layout": "^6.2.0",
    "antd": "^4.3.5",
    "axios": "^0.19.2",
    "loadsh": "^0.0.4",
    "mobx": "^5.15.4",
    "mobx-react": "^6.2.2",
    "moment": "^2.27.0",
    "qs": "^6.9.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@testing-library/jest-dom": "^5.10.1",
    "@testing-library/react": "^10.3.0",
    "@testing-library/user-event": "^12.0.6",
    "@types/jest": "^26.0.0",
    "@types/lodash": "^4.14.156",
    "@types/node": "^14.0.13",
    "@types/qs": "^6.9.3",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-router": "^5.1.8",
    "@types/react-router-dom": "^5.1.5",
    "eslint": "7.4.0",
    "http-proxy-middleware": "^1.0.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "stylelint": "^13.6.1",
    "typescript": "^3.9.5",
    "zhouhaifei-code-style": "1.0.4",
    "zhouhaifei-react-scripts": "^0.0.10"
  },
  "browserslist": [
    "Chrome >= 54",
    "Firefox >= 47",
    "Edge >= 12",
    "Explorer >= 11",
    "Safari >= 10.1",
    "Opera >= 41"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.less": [
      "npm run lint:style",
      "git add ."
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "npm run lint:js",
      "git add ."
    ],
    "**/*.{css,less,scss,md,html,json}": [
      "prettier --write",
      "git add ."
    ]
  },
  "scripts": {
    "test-start": "node zhouhaifei-react-scripts/scripts/start.js",
    "test-build": "node zhouhaifei-react-scripts/scripts/build.js",
    "test-test": "node zhouhaifei-react-scripts/scripts/test.js",
    "start": "zhouhaifei-react-scripts start",
    "build": "zhouhaifei-react-scripts build",
    "test": "zhouhaifei-react-scripts test",
    "lint-staged": "lint-staged --allow-empty",
    "lint:style": "stylelint --fix \"src/**/*.less\" --syntax less",
    "lint:js": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
    "prettier": "prettier -c --write \"**/*.{css,less,scss,md,html,json}\""
  }
}
