{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types"],
    "outDir": "./lib",
    "target": "es5",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "declaration": true,
    "baseUrl": ".",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": false,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "alwaysStrict": false,
    "strictNullChecks": false,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "exclude": ["node_modules", "dist", "lib", "coverage", "**/__tests__/"],
  "include": ["./src"]
}
