import './global.less';
import React from 'react';
import ReactDOM from 'react-dom';
import { routes } from './routes';
import { Locale, RenderRoutes, history } from './utils';

function render() {
  ReactDOM.render(
    <React.StrictMode>
      <Locale>
        <RenderRoutes
          history={history}
          loading="这是默认的loading文字,请根据实际需要替换。如antd的Spin"
          routes={routes}
        />
      </Locale>
    </React.StrictMode>,
    document.getElementById('root')
  );
}

render();

// @ts-ignore
if (module.hot) {
  // @ts-ignore
  module.hot.accept([
    './routes',
    './utils',
  ], () => {
    render();
  });
}
